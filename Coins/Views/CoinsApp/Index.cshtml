<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" href="~/css/styles.css">
    <title>Coin Counta</title>
  </head>
  <body>
    <div class="container">
      <div class="jumbotron">
        <h1>Coin Counter</h1>


      </div>
      @if (Model != null)
      {
        <h3>Quarters: @Model[0]</h3>
        <h3>Dimes: @Model[1]</h3>
        <h3>Nickels: @Model[2]</h3>
        <h3>Pennies: @Model[3]</h3>
      }
      <a href="/coin/form">Count some coins!</a>
    </div>

  </body>
</html>
